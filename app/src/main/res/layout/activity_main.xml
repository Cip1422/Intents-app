<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <Button
       android:id="@+id/camer_bttn"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
       android:text="Go to set picture"/>

   <EditText
       android:id="@+id/name_edit"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/camer_bttn"
       android:layout_marginTop="30dp"/>

   <Button
      android:id="@+id/name_bttn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/name_edit"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:text="display name"/>


   <TextView
       android:id="@+id/emi"
       android:layout_width="0dp"
       android:layout_height="100dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/name_bttn"
       android:layout_marginTop="30dp"
       android:textAlignment="center"
       android:textSize="30sp"
       android:background="#EC0A0A"
       android:textColor="#070707"/>

   <SeekBar
       android:id="@+id/seek_p"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/emi"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:min="0"
       android:max="100000"/>

   <SeekBar
       android:id="@+id/seek_r"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/seek_p"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:min="0"
       android:max="30"/>

   <SeekBar
       android:id="@+id/seek_n"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/seek_r"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:min="0"
       android:max="480"/>

</androidx.constraintlayout.widget.ConstraintLayout>